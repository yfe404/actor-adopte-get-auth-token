{
  "title": "Adopte Login Actor Input",
  "description": "Configuration for the Adopte login automation actor",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "email": {
      "title": "Email Address",
      "description": "Your Adopte account email address",
      "type": "string",
      "editor": "textfield"
    },
    "password": {
      "title": "Password",
      "description": "Your Adopte account password",
      "type": "string",
      "editor": "textfield",
      "isSecret": true
    },
    "headless": {
      "title": "Headless Mode",
      "description": "Run browser in headless mode (no GUI)",
      "type": "boolean",
      "default": true,
      "editor": "checkbox"
    },
    "proxyConfiguration": {
      "title": "Proxy Configuration",
      "description": "Proxy settings for the actor",
      "type": "object",
      "editor": "proxy"
    }
  },
  "required": ["email", "password"]
}
